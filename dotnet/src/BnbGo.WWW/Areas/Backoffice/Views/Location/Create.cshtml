@model BnbGo.Models.ViewModels.LocationViewModel
@{
    ViewBag.Title = "Create a location";
    ViewBag.SubTitle = "Create a new location";
    Layout = "~/Areas/Backoffice/Views/Shared/_Layout.cshtml";
}

<form id="createForm" class="mid col col-xl-6 col-la-8 col-md-12 col-sm-12 col-xs-12" asp-controller="Location" asp-action="Create" method="post" asp-antiforgery="true">
    <div class="col col-xl-12 col-md-12 col-la-12 col-sm-12 col-xs-12">
        <label asp-for="Location.Name">Street</label>
        <input asp-for="Location.Name">
    </div>
    <div class="col col-xl-12 col-md-12 col-la-12 col-sm-12 col-xs-12">
        <label asp-for="Location.Description">Number</label>
        <input asp-for="Location.Description">
    </div>
    <div class="col col-xl-12 col-md-12 col-la-12 col-sm-12 col-xs-12">
        <label asp-for="Location.City">City</label>
        <select asp-for="Location.CityId" asp-items="Model.Cities"></select> 
    </div>
    <div id="submenu" class="col col-xl-12 col-la-12 col-md-12 col-sm-12 col-xs-12">
        <div class="col col-xl-6 col-la-6 col-md-6 col-sm-6 col-xs-6">
            <a class="button" asp-controller="Location" asp-action="Index">Cancel</a>
        </div>
        <button type="submit" class="button right col col-xl-6 col-la-6 col-md-6 col-sm-6 col-xs-6">Save</button>
    </div>
</form>