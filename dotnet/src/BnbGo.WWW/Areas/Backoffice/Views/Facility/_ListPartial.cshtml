@model ICollection<BnbGo.Models.Facility>
@Html.AntiForgeryToken()
@if (Model != null && Model.Count() > 0)
{
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var facility in Model)
          {
            <tr>
              <td>@facility.Name</td>
              <td>@facility.Description</td>
            </tr>
          }
        </tbody>
      </table>
}
else
{
    <p>No facilities in the database!</p>
}
</div>