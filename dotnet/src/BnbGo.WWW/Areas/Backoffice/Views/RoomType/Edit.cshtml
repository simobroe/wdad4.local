@model BnbGo.Models.ViewModels.RoomTypeViewModel
@{
    ViewBag.Title = "Edit a room type";
    ViewBag.SubTitle = "Edit the current room type";
    ViewBag.Description = "Edit a RoomType via the form or go back to the list of locations.";
    Layout = "~/Areas/Backoffice/Views/Shared/_Layout.cshtml";
}
<div id="submenu" class="col col-xl-12 col-la-12 col-md-12 col-sm-12 col-xs-12">
    <div class="col col-xl-3 col-la-3 col-md-6 col-sm-6 col-xs-6">
        <a class="button" asp-controller="RoomType" asp-action="Index">Overview</a>
    </div>
</div>

<form id="editForm" class="mid col col-xl-6 col-la-8 col-md-12 col-sm-12 col-xs-12" asp-controller="RoomType" asp-action="Edit" method="post" asp-antiforgery="true">
    <input asp-for="RoomType.Id" type="hidden">
    <div class="col col-xl-12 col-md-12 col-la-12 col-sm-12 col-xs-12">
        <label asp-for="RoomType.Name">Name</label>
        <input asp-for="RoomType.Name">
    </div>
    <div class="col col-xl-12 col-md-12 col-la-12 col-sm-12 col-xs-12">
        <label asp-for="RoomType.Description">Description</label>
        <input asp-for="RoomType.Description">
    </div>
    <div class="col col-xl-12 col-md-12 col-la-12 col-sm-12 col-xs-12">
        <label asp-for="RoomType.BedAmount">BedAmount</label>
        <input asp-for="RoomType.BedAmount">
    </div>
    <div class="col col-xl-12 col-md-12 col-la-12 col-sm-12 col-xs-12">
        <label asp-for="RoomType.GuestAmount">GuestAmount</label>
        <input asp-for="RoomType.GuestAmount">
    </div>
    <div id="submenu" class="col col-xl-12 col-la-12 col-md-12 col-sm-12 col-xs-12">
        <div class="col col-xl-6 col-la-6 col-md-6 col-sm-6 col-xs-6">
            <a class="button" asp-controller="RoomType" asp-action="Index">Cancel</a>
        </div>
        <button type="submit" class="button right col col-xl-6 col-la-6 col-md-6 col-sm-6 col-xs-6">Save</button>
    </div>
</form>