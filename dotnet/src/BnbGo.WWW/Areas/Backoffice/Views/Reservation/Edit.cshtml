@model BnbGo.Models.ViewModels.ReservationViewModel
@{
    ViewBag.Title = "Reservation Management";
    ViewBag.SubTitle = "Edit existing reservation";
    ViewBag.Description = "Edit a reservation via the form or go back to the list of locations.";
    Layout = "~/Areas/Backoffice/Views/Shared/_Layout.cshtml";
}
<div id="submenu" class="col col-xl-12 col-la-12 col-md-12 col-sm-12 col-xs-12">
    <div class="col col-xl-3 col-la-3 col-md-6 col-sm-6 col-xs-6">
        <a class="button" asp-controller="Reservation" asp-action="Index">Overview</a>
    </div>
</div>

<form id="editForm" class="mid col col-xl-6 col-la-8 col-md-12 col-sm-12 col-xs-12" asp-controller="Reservation" asp-action="Edit" method="post" asp-antiforgery="true">
    <input asp-for="Reservation.Id" type="hidden">
    <div class="col col-xl-12 col-md-12 col-la-12 col-sm-12 col-xs-12">
        <label asp-for="Reservation.Arrival">Arrival</label>
        <input asp-for="Reservation.Arrival">
    </div>
    <div class="col col-xl-12 col-md-12 col-la-12 col-sm-12 col-xs-12">
        <label asp-for="Reservation.Departure">Departure</label>
        <input asp-for="Reservation.Departure">
    </div>
    <div class="col col-xl-12 col-md-12 col-la-12 col-sm-12 col-xs-12">
        <label asp-for="Reservation.User">User</label>
        <select asp-for="Reservation.UserId" asp-items="Model.Users"></select> 
    </div>
    <div class="col col-xl-12 col-md-12 col-la-12 col-sm-12 col-xs-12">
        <label asp-for="Reservation.Room">Room</label>
        <select asp-for="Reservation.RoomId" asp-items="Model.Rooms"></select> 
    </div>
    <button type="submit" class="button right col col-xl-4 col-la-4 col-md-6 col-sm-12 col-xs-12">Save changes</button>
</form>