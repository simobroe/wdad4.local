@model ICollection<BnbGo.Models.Image>
@Html.AntiForgeryToken()
@if (Model != null && Model.Count() > 0)
{
    <table class="col col-xl-12 col-la-12 col-md-12 col-sm-12 col-xs-12">
        <thead>
          <tr>
            <th>Element</th>
            <th>Value</th>
          </tr>
        </thead>
        <tbody>
            @foreach (var image in Model)
            {
                <tr>
                    <td>Id</td>
                    <td>@image.Id</td>
                </tr>
                <tr>
                    <td>Name</td>
                    <td>@image.Name</td>
                </tr>
                <tr>
                    <td>Link</td>
                    <td>@image.Link</td>
                </tr>
                <tr>
                    <td>Image type</td>
                    <td>@image.ImageType.Name</td>
                </tr>
                @if (@image.ImageType.Name == "User") {
                <tr>
                    <td>User</td>
                    <td>@image.User.FirstName @image.User.SurName</td>
                </tr>
                } else if (@image.ImageType.Name == "Room") {
                <tr>
                    <td>Room</td>
                    <td>@image.Room.Name</td>
                </tr>
                } else {
                <tr>
                    <td>Region</td>
                    <td>@image.Region.Name</td>
                </tr>
                }
                <tr>
                    <td>Create date</td>
                    <td>@image.CreatedAt</td>
                </tr>
                <tr>
                    <td>Update date</td>
                    @if (@image.UpdatedAt == null) {
                        <td>Not Updated</td>
                    } else {
                        <td>@image.UpdatedAt</td>
                    }
                </tr>
                <tr>
                    <td>Delete date</td>
                    @if (@image.DeletedAt == null) {
                        <td>Not Deleted</td>
                    } else {
                        <td>@image.DeletedAt</td>
                    }
                </tr>
            } 
        </tbody>
      </table>
}
else
{
    <p>No details available!</p>
}
</div>