@model BnbGo.Models.ViewModels.RegionViewModel
@{
    ViewBag.Title = "Region Management";
    ViewBag.SubTitle = "Edit an existing region";
    ViewBag.Description = "Edit a region via the form or go back to the list.";
    Layout = "~/Areas/Backoffice/Views/Shared/_Layout.cshtml";
}
<div id="submenu" class="col col-xl-12 col-la-12 col-md-12 col-sm-12 col-xs-12">
    <div class="col col-xl-3 col-la-3 col-md-6 col-sm-6 col-xs-6">
        <a class="button" asp-controller="Region" asp-action="Index">Overview</a>
    </div>
</div>

<form id="editForm" class="mid col col-xl-6 col-la-8 col-md-12 col-sm-12 col-xs-12" asp-controller="Region" asp-action="Edit" method="post" asp-antiforgery="true">
    <input asp-for="Region.Id" type="hidden">
    <div class="col col-xl-12 col-md-12 col-la-12 col-sm-12 col-xs-12">
        <label asp-for="Region.Name">Name</label>
        <input asp-for="Region.Name">
    </div>
    <div class="col col-xl-12 col-md-12 col-la-12 col-sm-12 col-xs-12">
        <label asp-for="Region.Description">Description</label>
        <input asp-for="Region.Description">
    </div>
    <div class="col col-xl-12 col-md-12 col-la-12 col-sm-12 col-xs-12">
        <label asp-for="Region.CountryId">Country</label>
        <select asp-for="Region.CountryId" asp-items="Model.Country"></select> 
    </div>
    <button type="submit" class="button right col col-xl-4 col-la-4 col-md-6 col-sm-12 col-xs-12">Save changes</button>
</form>