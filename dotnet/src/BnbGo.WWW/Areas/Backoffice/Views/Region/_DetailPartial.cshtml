@model ICollection<BnbGo.Models.Region>
@Html.AntiForgeryToken()
@if (Model != null && Model.Count() > 0)
{
    <table class="col col-xl-12 col-la-12 col-md-12 col-sm-12 col-xs-12">
        <thead>
          <tr>
            <th>Element</th>
            <th>Value</th>
          </tr>
        </thead>
        <tbody>
            @foreach (var region in Model)
            {
                <tr>
                    <td>Id</td>
                    <td>@region.Id</td>
                </tr>
                <tr>
                    <td>Name</td>
                    <td>@region.Name</td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td>@region.Description</td>
                </tr>
                <tr>
                    <td>Currency</td>
                    <td>@region.Country.Name</td>
                </tr>
                <tr>
                    <td>Create date</td>
                    <td>@region.CreatedAt</td>
                </tr>
                <tr>
                    <td>Update date</td>
                    @if (@region.UpdatedAt == null) {
                        <td>Not Updated</td>
                    } else {
                        <td>@region.UpdatedAt</td>
                    }
                </tr>
                <tr>
                    <td>Delete date</td>
                    @if (@region.DeletedAt == null) {
                        <td>Not Deleted</td>
                    } else {
                        <td>@region.DeletedAt</td>
                    }
                </tr>
            } 
        </tbody>
      </table>
}
else
{
    <p>No details available!</p>
}
</div>